  <body class="bg-custom">

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header navbar-custom">
          <a class="navbar-brand-custom navbar-brand " href="#">Chatiee</a>
        </div>
        <div id="navbar">
          <ul class="nav navbar-nav navbar-nav-custom">
            <li><a href="./index"><img src="./img/navbar-icon/home-white-small.png" /></a></li>
            <li><a href="./category"><img src="./img/navbar-icon/search-small.png" /></a></li>
            <li class="active"><a href="#"><img src="./img/navbar-icon/star-white-small.png" /></a></li>
            <li><a href="./account"><img src="./img/navbar-icon/profile-white-small.png" /></a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <!-- <div class = "container">
      <div class = "emptyspace">
      </div>
    </div> -->
    <div class="container container-custom">


      <!-- test for handlebars -->
      {{#each programs}}
      <div class = "chatty-template">
        <a class="link" href="./room/{{program-name}}">
        <div class="row">
          <div class = "col-xs-6">
            <img class="program-img" src="{{imgURL}}" />
          </div>
          <div class = "description col-xs-6">
            <div class = "row channel-name">
              <p>{{channel-name}}</p><span> - </span>
            </div>
            <div class = "row program-name">
              <p>{{program-name}}</p>
            </div>
            <div class="time">
              <div class = "row program-time">
                <p>{{program-time}}</p>
              </div>
              <div class = "row program-viewer">
                <p>Live Viewers: </p> <span id="viewerNum">{{viewerNum}}</span>
              </div>
            </div>
            <div class="collect">
              <a href="#">
                <img id="collect" src="./img/star_gold_small.png"/>
              </a>
            </div>
          </div>
        </div>
        </a>
      </div>
      {{/each}}

    </div><!-- /.container -->


    <!-- Bootstrap core JavaScript
    ================================================== -->
