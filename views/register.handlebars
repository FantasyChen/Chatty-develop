  <body class = "bg-custom">

    <div class="container-custom login">
      <div class="title">
        Chatiee
      </div>
      {{#if error}}
      <div class = "errorbox">
        <p>
          {{errorMsg}}
        </p>
      </div>
      {{/if}}

    <form id="registerForm" role="form" method="post" action="/account/register/user">
      <div class="login-box">
        <div class="username-box">
          <input type="text" class="userID" placeholder="Username" name = "userID"/>
        </div>
        <div class="username-box">
          <input type="text" class="nickname" placeholder="Nickname" name = "username"/>
        </div>
        <div class="password-box">
          <input type="password" class="password" placeholder="Password" name = "password"/>
        </div>
        <div class="password-box">
          <input type="password" class="password" placeholder="Confirm Password" name = "confirm"/>
        </div>
      </div>
      <div class = "login index-button">
        <button class = "registerBtn">
          Register
        </button>
      </div>
    </form>

    <form action = "/">
      <div class = "login index-button">
        <input type = "submit"  value = "Guest" class = "guestBtn">
        </input>
      </div>
    </form>
  </div>

